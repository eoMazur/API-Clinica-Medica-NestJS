generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @default(autoincrement())
  nome String
  senha String
  email String @unique
  cargo Int @default(1)
  telefone String
  cidade String
  consultas Consulta[]

  @@map("usuarios")
}

model Consulta{
  id Int @id @default(autoincrement())
  tipoConsulta TipoConsulta @relation(fields: [idTipoConsulta], references: [id])
  idTipoConsulta Int
  paciente Usuario @relation(fields: [pacienteId], references: [id])
  pacienteId Int
  descricao String
  data DateTime

  @@map("consultas")
}

model TipoConsulta{
  id Int @id @default(autoincrement())
  nome String
  valor Float
  consultas Consulta[]

  @@map("tipo_consultas")
}
